<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>members only</title>
    <link rel="stylesheet" href="style.css">
</head>
<body>
    <div class="app">
        <div class="logo">
            <div class="letter">t</div>
            <h1 style="margin: 10px; margin-bottom: 20px; margin-top: 20px;">wellcome at telex</h1>
        </div>  
            <% if (locals.user) {%>
            <div class="logoutbtn">
                <h4>Wellcome <%= user.firstname %></h4>
                <div style="padding: 5px;">
                    <button><a href="/addmessage">+ message</a></button>
                    <button><a href="/log-out">log out</a> </button>
                </div>
            </div>
    <div class="logpage">       
            <div class="members">
                <h5 style="color: red; font-size: 1.1rem;">Club Members</h5>
                <% members.forEach((member) => { %>
                    <li>
                        <div>
                            <h5> <%= member.firstname %></h5>
                            <h5 style="margin-left: 5px;"> <%= member.lastname %></h5>
                        </div>
                        <h6><%= member.status %></h6>
                        <form class="delform"" action="/<%= member.id %>/delete-member" method="POST"
                           style="display: <% if(user.status == 'admin' && member.status != 'admin'){ %> <%= display %> <%} %>;" >
                            <button class="del" type="submit" onclick="return confirm('Are you sure you want to delete this member?');"
                           >del</button>
                        </form>
                    </li>
                <% }) %>
            </div>

        <% } else { %>
        <div class="signbtns">
            <button>
                <a href="/sign-up">sign-up</a>
            </button>
            <button>
                <a href="log-in">log-in</a>
            </button>
        </div>
         <%}%>
         <div style="color: aliceblue; margin:20px; max-width: 500px;">Join the exclusive Club to post messages, opinions and ideas, to agree or 
            disagree with the posts, Let know the club members and introduce yourself.
         </div>
        <div class="container">
            <div class="left">
                <p></p>
            </div>
            <div class="messages">
                <% if (locals.messages) { %>
                <% messages.forEach((message) => { %>
                    <div class="message">
                        <li>
                            <p style="display: <%= display %>; margin-bottom: 1px; text-align: end; font-weight: 600 ; margin: 0px; color:darkblue;"><%= message.author %> </p>
                            <p style="text-align: end; font-size: 0.8rem; color: red; padding: 3px; margin: 1px;"><%= message.date %></p>

                        </li>
                        <h4 style="margin: 2px;"></i> <%= message.messagetitle %> </h4>
                        <p style="margin: 1px;"><em><%= message.messagetext %> </em></p>
                        <form class="delform"" action="/<%= message.id %>/delete-message" method="POST" 
                            style="display: <% if (locals.user != undefined){ %>
                                <% if (user.status == 'admin'){ %>
                                    <%= display %>
                                <% } else if (user.username == message.username) { %>
                                    <%= display %>
                                <% } %>                            
                            <% } %>; ">
                       
                    <button class="del" type="submit" onclick="return confirm('Are you sure you want to delete this message?');" > delete</button>
                    </form>
                    <div  class="like">
                       <% if (locals.user) {%>
                        <form  action="/<%= message.id %>/likes"  method="post">
                            <input type="hidden" name="yes" value="yes">
                            <button type="submit" id="yes" >&#128077;  <span style="font-size: 0.9rem;"><%= message.yeslike %> </span></button>
                        </form>
        
                       <form action="/<%= message.id %>/likes" method="post">
                            <input type="hidden" name="no" value="no">
                            <button type="submit" id="no" > &#128078; <span style="font-size: 0.9rem;"><%= message.nolike %> </span></button>
                        </form> 
                        <% } else { %>
                            <button type="submit" id="yes" >&#128077;  <span style="font-size: 0.9rem;"><%= message.yeslike %> </span></button>
                            <button type="submit" id="no" > &#128078; <span style="font-size: 0.9rem;"><%= message.nolike %> </span></button>

                        <% } %>
                    </div>
                    </div>
                <% }) %>
            </div>
            <% } %>
        </div>
         
    </div>
    </div>
</body>
</html>